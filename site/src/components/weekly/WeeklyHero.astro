---
import { SignInButton, SubmitOrSignInButton } from "@/components/sidebar-utils";
import { Button, buttonVariants } from "@/components/ui/button";
const { session } = Astro.locals;
---

<div class="mb-12 text-center">
  <h1 class="text-4xl font-bold tracking-tight mb-4">Weekly Discussion</h1>
  <p class="text-muted-foreground mb-6">
    Vote on the best prompts and context windows
  </p>
  <div class="flex justify-center gap-4">
    {
      session ? (
        <a class={buttonVariants({ variant: "default" })} href="/weekly/submit">
          Submit a Post
        </a>
      ) : (
        <SignInButton />
      )
    }
  </div>
</div>
