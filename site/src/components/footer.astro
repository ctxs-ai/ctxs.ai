---
import { Logo, LogoWordmark, Wordmark } from "@/components/wordmark";
import { SiBluesky, SiX, SiGithub } from "@icons-pack/react-simple-icons";
import { TrophyIcon } from "lucide-react";
---

<footer class="border-t mt-24">
  <div class="max-w-2xl mx-auto py-16 px-4">
    <div class="flex flex-col md:flex-row justify-between gap-6">
      <div>
        <a href="/">
          <LogoWordmark className="h-6" />
        </a>
        <div class="flex gap-2 mt-10">
          <a
            href="https://x.com/ctxsdotai"
            class="text-muted-foreground hover:text-foreground transition-colors"
          >
            <SiX className="size-5" />
          </a>
          <a
            href="https://bsky.app/profile/ctxs.ai"
            class="text-muted-foreground hover:text-foreground transition-colors"
          >
            <SiBluesky className="size-5" />
          </a>
          <a
            href="https://github.com/ctxs-ai"
            class="text-muted-foreground hover:text-foreground transition-colors"
          >
            <SiGithub className="size-5" />
          </a>
        </div>
        <p class="text-xs text-muted-foreground mt-2">
          Sharing weekly roundups on socials.
        </p>
      </div>

      <nav class="flex gap-8">
        <div class="flex flex-col gap-2">
          <h3 class="font-semibold text-sm">Weekly</h3>
          <ul class="space-y-2 text-sm text-muted-foreground">
            <li>
              <a href="/weekly" class="hover:text-foreground transition-colors"
                >Submissions</a
              >
            </li>
            <li>
              <a
                href="/weekly/submit"
                class="hover:text-foreground transition-colors">Submit</a
              >
            </li>
            <li>
              <a
                href="/all-time"
                class="hover:text-foreground transition-colors flex items-center gap-2"
                >All-time
                <TrophyIcon className="size-4 opacity-50 rotate-12" />
              </a>
            </li>
          </ul>
        </div>

        <nav class="flex gap-8">
          <div class="flex flex-col gap-2">
            <h3 class="font-semibold text-sm">Docs</h3>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li>
                <a
                  href="/docs/permalinks"
                  class="hover:text-foreground transition-colors">Permalinks</a
                >
              </li>
              <li>
                <a
                  href="/docs/cursor"
                  class="hover:text-foreground transition-colors">Cursor</a
                >
              </li>
              <li>
                <a
                  href="/docs/cli"
                  class="hover:text-foreground transition-colors">CLI</a
                >
              </li>
            </ul>
          </div>

          <div class="flex flex-col gap-2">
            <h3 class="font-semibold text-sm">About</h3>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li>
                <a href="/" class="hover:text-foreground transition-colors"
                  >Home</a
                >
              </li>
              <li>
                <a
                  href="https://github.com/ctxs-ai/ctxs.ai"
                  class="hover:text-foreground transition-colors">GitHub</a
                >
              </li>
              <li>
                <a
                  href="/docs/faq"
                  class="hover:text-foreground transition-colors">FAQ</a
                >
              </li>
            </ul>
          </div>
        </nav>
      </nav>
    </div>
  </div>
</footer>
